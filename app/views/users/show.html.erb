<div class="contents row">
  <div class="col s12">
    <div class="card self">
      <div class="card-image">
        <%= image_tag(@user.avatar.url, :class => "user-img circle responsive-img") %>
        <span class="card-title username"><%= @user.nickname %>
        </span>
      </div>
      <div class="card-content row">
        <div class="num-info col s6"><%= @user.articles.count %> posts</div>
        <div class="num-info col s6"><%= @user.likes.count %> likes</div>
        <div class="bio"><%= @user.bio %></div>
        <% if @user.id == current_user.id %>
            <%= link_to edit_user_registration_path, :class => "right btn waves-effect waves-light red lighten-2 red-text text-lighten-5" , :method => :get do %>編集
            <% end %>
            <div class="clearfix"></div>
            <% if current_user.uid %>
              <p class="right">twitterと連携済み</p>
            <% end %>
        <% end %>
      </div>
      <div class="card-action row">
        <div class="col s12">
          <ul class="tabs">
            <li class="tab col s3">
              <a href="#tab1"><div class="tag-wrapper row">
                  <div class="col s3 valign-wrapper"><%= image_tag(@user.avatar.url, :class => "user-img circle responsive-img valign") %></div>
                  <div class="col s9 teal-text text-darken-2"><%= @user.nickname %><br>のPhoto</div>
                </div></a>
            </li>
            <li class="tab col s3">
              <a href="#tab2"><div class="tag-wrapper row">
                  <div class="col s3"><%= image_tag("like.png", :class => "responsive-img") %></div>
                  <div class="col s9 teal-text text-darken-2"><%= @user.nickname %><br>のLike</div>
                </div></a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div id="tab1" class="tab-set">
      <ul class="cards panels">

        <% @articles.each do |article| %>

          <li class="card panel">
            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag(article.image, :class => "card-img") %>
              <span class="card-title">
                <%= image_tag("like.png", :class => "float-left") %>
                <p class="float-left"><%= article.likes_count %></p>
              </span>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">
                <div class="row">
                  <div class="col s3"><%= image_tag(article.user.avatar.url, :class => "user-img circle responsive-img") %></div>
                  <div class="col s7">
                    <span class="username avatar"><%= article.user.nickname %></span>
                  </div>
                  <div class="info col s2">
                    <%= link_to "/articles/#{article.id}", :method => :get, :class => "a-info" do %>
                      <%= image_tag('info.png') %>
                    <% end %>
                  </div>
                </div>
              </span>
            </div>
          </li>

        <% end %>

      </ul>
    </div>
    <div id="tab2" class="tab-set">
      <ul class="cards panels">

        <% @liked_articles.each do |article| %>

          <li class="card panel">
            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag(article.image, :class => "card-img") %>
              <span class="card-title">
                <%= image_tag("like.png", :class => "float-left") %>
                <p class="float-left"><%= article.likes_count %></p>
              </span>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">
                <div class="row">
                  <%= link_to "/users/#{article.user_id}", :method => :get, :class => "a-avatar" do %>
                    <div class="col s3"><%= image_tag(article.user.avatar.url, :class => "user-img circle responsive-img") %></div>
                    <div class="col s7">
                      <span class="username avatar"><%= article.user.nickname %></span>
                    </div>
                  <% end %>
                  <div class="info col s2">
                    <%= link_to "/articles/#{article.id}", :method => :get, :class => "a-info" do %>
                      <%= image_tag('info.png') %>
                    <% end %>
                  </div>
                </div>
              </span>
            </div>
          </li>

        <% end %>

      </ul>
    </div>
  </div>
</div>