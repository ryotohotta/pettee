<div class="form-wrapper">
  <%= form_for(@article, html:{class: 'image-form'}, :html => {:multipart => true}) do |f| %>
    <div class="file-field input-field">
      <div class="btn orange darken-3">
        <span>画像を選択</span>
        <%= f.file_field :image %>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>
    <div class="input-field col s12 category-form">
      <%= f.select :category, ["わんちゃん", "ねこちゃん", "ハムスター", "鳥類", "うさぎ", "小動物", "その他"], :prompt => "選んでください" %>
      <%= f.label :category, "カテゴリー" %>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :comment, :class => "materialize-textarea" %>
        <%= f.label :icon_prefix2, "コメントする" %>
     </div>
    </div>
    <% if current_user.uid %>
    <div class="switch left">
      <p>twitterにも投稿する</p>
        <label>
          0ff
          <%= f.check_box :twittercheck, {:checked => true}, 1, 0 %>
          <span class="lever"></span>
          On
        </label>
    </div>
    <% else %>
      <p>twitterと連携していません</p>
      <div class="switch left">
        <label>
          On
          <input disabled type="checkbox">
          <span class="lever"></span>
          Off
        </label>
      </div>
    <% end %>
    <div class="clearfix"></div>
    <button class="btn-large waves-effect waves-light orange darken-3 right" name="action">
      <%= f.submit "投稿する" %>
    </button>
    <div class="clearfix"></div>
  <% end %>
</div>