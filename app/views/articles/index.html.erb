<div class="card-wrapper">
  <div class="swipe-cards">
    <!--/cards-->
    <ul class="cards panels">

      <% @articles.each do |article| %>
          <li class="card panel" id="<%= article.id %>">
            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag(article.image.thumb.url, :class => "card-img") %>
              <span class="card-title">
                <%= image_tag("like.png", :class => "float-left") %>
                <p class="float-left"><%= article.likes_count %></p>
              </span>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">
                <div class="row">
                  <%= link_to "/users/#{article.user_id}", :method => :get, :class => "a-avatar" do %>
                    <div class="col s3">
                        <%= image_tag(article.user.avatar.url, :class => "user-img circle responsive-img") %>
                    </div>
                    <div class="col s7">
                      <span class="username avatar"><%= article.user.nickname %></span>
                    </div>
                  <% end %>
                  <div class="info col s2">
                    <%= link_to "/articles/#{article.id}", :method => :get, :class => "a-info" do %>
                      <%= image_tag('info.png') %>
                    <% end %>
                  </div>
                  <div id="like-buttons">
                    <%= render :partial => "likes/like", locals: { article: article} %>
                  </div>
                </div>
              </span>
            </div>
            <div class="like">
            </div>
            <div class="dislike"></div>
          </li>
      <% end %>
    </ul>
  </div>
</div>
  <!--/cards-->

  <!-- actions -->
  <div class="actions row">
    <div class="col s6">
      <a href="" class="dislike">
        <%= image_tag('dislike.png') %>
      </a>
    </div>
    <div class="col s6 right">
      <a href="" class="like">
        <%= image_tag('like.png') %>
      </a>
    </div>
  </div>
  <!-- actions -->