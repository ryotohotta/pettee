<div class="card-wrapper">
  <div class="swipe-cards">
    <!--/cards-->
    <ul class="cards panels">

      <% @articles.each_with_index do |article, i| %>
          <li class="card panel">
            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag(article.image.thumb.url, :class => "card-img") %>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">
                <div class="row">
                  <div class="col s3"><%= image_tag(article.user.avatar.url, :class => "user-img circle responsive-img") %></div>
                  <div class="col s6">
                    <span class="username avatar"><%= article.user.nickname %></span>
                  </div>
                  <div class="info col s3">
                    <%= link_to "/articles/#{article.id}", :method => :get, :class => "a-info" do %>
                    <%= image_tag('info.png') %>
                    <% end %>
                  </div>
                </div>
              </span>
            </div>
            <div class="like"></div>
            <div class="dislike"></div>
          </li>
      <% end %>
    </ul>
  </div>
</div>
  <!--/cards-->

  <!-- actions -->
  <div class="actions row">
    <div class="col s6">
      <a href="" class="dislike">
        <%= image_tag('dislike.png') %>
      </a>
    </div>
    <div class="col s6 right">
      <a href="" class="like">
        <%= image_tag('like.png') %>
      </a>
    </div>
  </div>
  <!-- actions -->