<div class="card-wrapper">
  <div class="card">
    <div class="card-image">
      <%= image_tag(@article.image.thumb.url, :class => "card-img") %>
    </div>
    <div class="card-content">
      <span class="card-title">
        <div class="row">
          <div class="col s3"><%= image_tag(@article.user.avatar.url, :class => "user-img circle responsive-img") %></div>
          <div class="col s9">
            <span class="username">
              <%= @article.user.nickname %>
            </span>
          </div>
        </div>
      </span>
    </div>
  </div>
</div>

<div class="text-area z-depth-1">
  <div class="text-inner">
    <div class="chip">
      <i class="material-icons float-left">label</i>
      <p class="float-right"><%= @article.category %></p>
    </div>
    <div class="clearfix"></div>
    <div class="comment">
      <p>
        <%= @article.comment %>
    </div>
    <div class="triangle"></div>
  </div>
</div>
<div class="edit float-right">
  <a href="" class="waves-effect waves-teal btn-flat">編集する</a>
</div>
<div class="clearfix"></div>

<div class="comment-area">
  <h4>コメント <%= @article.talks.count %>件</h4>
  <ul class="collection">
    <% if @talks %>
      <% @talks.each do | talk | %>
        <li class="collection-item avatar">
          <%= image_tag(talk.user.avatar.url, :class => "user-img circle responsive-img") %>
          <span class="title username">
            <%= link_to talk.user.nickname, "/users/#{talk.user_id}" %>
          </span>
          <p class="comment"><%= talk.text %></p>
        </li>
      <% end %>
    <% end %>

    <% if current_user %>
      <li class="collection-item avatar">
        <%= image_tag(current_user.avatar.url, :class => "user-img circle responsive-img") %>
        <span class="title username"><%= current_user.nickname %></span>
        <div class="row">
          <%= form_tag("/articles/#{@article.id}/talks", method: :post, class: "col s12") do %>
            <div class="row">
              <div class="input-field col s12">
                <textarea id="icon_prefix2" class="materialize-textarea" name="text"></textarea>
                <label for="icon_prefix2"><i class="small material-icons">mode_edit</i></label>
              </div>
            </div>
            <button class="btn waves-effect waves-light float-right" type="submit" value="SENT">送信する
              <i class="material-icons right">send</i>
            </button>
            <div class="clearfix"></div>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>